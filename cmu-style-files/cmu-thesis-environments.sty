% Add support for automatic equation breaking
\gdef\cmu@wrap@breqn@environ#1#2{
	\expandafter\let\csname cmu@breqn@oldbegin@#1\expandafter\endcsname\csname #1\endcsname
	\expandafter\let\csname cmu@breqn@oldend@#1\expandafter\endcsname\csname end#1\endcsname
	\expandafter\gdef\csname cmu@breqn@begin@#1\endcsname{%
		\expandafter\let\csname #1\expandafter\endcsname\csname cmu@breqn@oldbegin@#1\endcsname%
		\cmu@setspace@fix%
		\begin{#2}%
	}
	\expandafter\gdef\csname cmu@breqn@end@#1\endcsname{%
		\expandafter\let\csname end#1\expandafter\endcsname\csname cmu@breqn@oldend@#1\endcsname%
		\end{#2}%
		\expandafter\let\csname #1\expandafter\endcsname\csname cmu@breqn@begin@#1\endcsname%
		\expandafter\let\csname end#1\expandafter\endcsname\csname cmu@breqn@end@#1\endcsname%
	}
	\expandafter\let\csname #1\expandafter\endcsname\csname cmu@breqn@begin@#1\endcsname
	\expandafter\let\csname end#1\expandafter\endcsname\csname cmu@breqn@end@#1\endcsname
}
\newif\ifbreqn
\AtBeginDocument{
	\@ifpackageloaded{breqn}{
		% Setup equation breaking on default equation environment
		\cmu@wrap@breqn@environ{equation}{dmath}
		\cmu@wrap@breqn@environ{equation*}{dmath*}
		% Change the default relation penalty to not break small equations
		\prerelpenalty=-99
		\breqntrue
	}{
		% No Equation breaking
		\breqnfalse
	}
}
